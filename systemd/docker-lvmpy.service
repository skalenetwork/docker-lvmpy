[Unit]
Description=python lvm docker plugin
Conflicts=getty@tty1.service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/venvs/docker-lvmpy/
ExecStart=/opt/venvs/docker-lvmpy/bin/python3 app.py
EnvironmentFile=/etc/docker-lvmpy/docker-lvmpy.conf
Restart=never
KillSignal=SIGINT
NotifyAccess=all

[Install]
WantedBy=multi-user.target
